{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "*": [ "node_modules/*" ] },
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts",
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strictBindCallApply": true,
	"lib": [ "es6" ],
	"allowJs": true
  },
  "include": [ "src", "test" ]
}
